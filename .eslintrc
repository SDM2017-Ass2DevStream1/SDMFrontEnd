---
extends:
  - airbnb

env:
  browser: true

globals:
  __DEV__: true

rules:
  arrow-body-style: 0
  no-underscore-dangle: 0
  react/prop-types: 0
  react/forbid-prop-types: 0
  react/prefer-stateless-function: 0
  import/prefer-default-export: 0
  import/no-extraneous-dependencies: [error, { devDependencies: true }]
