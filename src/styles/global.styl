@require 'nib/reset'
@require './mixin'


$img_path = '../images/'

//
// Reset
//
reset-html5()
global-reset()


//
// Globals
//
*
  &, &:before, &:after
    box-sizing: border-box

html
  font-size: 10px
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

body
  font-size: 12px
  font-family: Roboto, BlinkMacSystemFont, -apple-system, Segoe UI, Helvetica, Arial, sans-serif

#logo
  display: flex
  align-items: center
  color: #fff;
  text-decoration: none;
  font-size: 32px;
  i
    icon($img_path + 'logo', 85px, 85px, 'svg')
    margin-right: 20px
